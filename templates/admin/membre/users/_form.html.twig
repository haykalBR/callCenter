
{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Username</label>
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.username) }}
        </div>
        {% if   constant('App\\Domain\\Membre\\Form\\UserType::EDIT_ROUTE') != app.request.attributes.get('_route') %}
            <div class="form-group">
                <label>Password</label>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.plainPassword.children['first'])}}
            </div>
        {% endif %}

        <div class="form-group">
            <label> Last Name </label>
            {{ form_widget(form.profile.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Address </label>
            {{ form_widget(form.profile.address, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Telephone </label>
            {{ form_widget(form.profile.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Code Postal </label>
            {{ form_widget(form.profile.codePostal, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Birthday </label>
            {{ form_widget(form.profile.birthday, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Status</label>
            {{ form_widget(form.enabled, {'attr': {'class': 'form-control','data-toggle':'switchbutton','data-size':'sm','data-onlabel':'Enabled','data-offlabel':'Disabled'}}) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Email</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email)}}

        </div>
        {% if   constant('App\\Domain\\Membre\\Form\\UserType::EDIT_ROUTE') != app.request.attributes.get('_route') %}

        <div class="form-group">
            <label> Confirm Password</label>
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.plainPassword.children['second']) }}
        </div>
        {% endif %}
        <div class="form-group">
            <label> First Name </label>
            {{ form_widget(form.profile.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Gender </label>
            {{ form_widget(form.profile.gender, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Mobile </label>
            {{ form_widget(form.profile.mobile, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> RelationShipStatus </label>
            {{ form_widget(form.profile.relationShipStatus, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label> Image  </label>
            {{ form_widget(form.profile.file,{'attr': {'class':'dropify-fr' }}) }}
        </div>
    </div>

</div>
{{ form_rest(form) }}
<div class="col-md-12">
    <a href="{{path('admin_users')}}" class="btn btn-info float-left" type="button"> Retour a la liste </a>
    <button class="btn btn-primary float-right" type="submit"> Sauvegarder</button>
</div>
{{ form_end(form) }}