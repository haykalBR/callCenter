{% extends 'base.html.twig' %}
{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profile</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">User Profile</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                {{ form_start(form) }}
            <div class="row">
                     <div class="col-md-6">
                        <div class="card-header p-6">
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">firstName </label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">gender</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">address</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">telephone</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">codePostal</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="card-header p-6">
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">lastname</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">birthday</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.birthday) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">mobile</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.mobile, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">{{ form_label(form.relationShipStatus,'relationShipStatus') }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.relationShipStatus, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">{{ form_label(form.file,'relationShipStatus') }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.file,{'attr': {'class':'dropify-fr','data-default-file':asset(app.user.profile ? app.user.profile.relativeUrl : '') }}) }}
                                    </div>
                                </div>
                        </div>
                    </div>
                <div class="col-md-12">
                    <div class="card-header p-6">
                    <button class="btn btn-info float-right" type="submit"> Edit Profile</button>
                    </div>
                </div>
            </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% block javascripts %}
    <script>

    </script>
{% endblock %}
{% endblock %}
