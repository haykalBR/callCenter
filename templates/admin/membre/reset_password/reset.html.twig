
{% extends 'admin/membre/auth.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Admin</b>LTE</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Reset your password.</p>
                {% if not resetForm.vars.valid %}
                    <div class="alert alert-danger" role="alert">{{ form_errors(resetForm.plainPassword.first) }}</div>
                {% endif %}

                <form action="{{ path('admin_reset_password') }}" method="post">
                    <div class="input-group mb-3">
                        {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(resetForm) }}
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Reset password</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a href="{{ path('admin_app_login') }}">Login</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}


