{% use  'bootstrap_4_layout.html.twig' %}
{% block form_row -%}
            <div class="col-6">
                {{- form_label(form, null, { label_attr: { class: label_attr.class|default('') ~ ' col-form-label col-sm-3' } }) -}}
                {{- form_widget(form, { attr: { class: errors|length ? 'form-control is-invalid': 'form-control' } }) -}}
                {{- form_errors(form) -}}
            </div>
{%- endblock form_row %}
{%- block checkbox_widget -%}
    {% set rand = random() %}
    <div class="checkbox-toggle -large">
        <input type="checkbox" id="check-toggle-{{ rand }}" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        <label for="check-toggle-{{ rand }}"></label>
    </div>
{%- endblock checkbox_widget -%}





