{% use  'bootstrap_4_layout.html.twig' %}
{% block form_row -%}
            <div class="col-6">
                {{- form_label(form, null, { label_attr: { class: label_attr.class|default('') ~ ' col-form-label col-sm-3' } }) -}}
                {{- form_widget(form, { attr: { class: errors|length ? 'form-control is-invalid': 'form-control' } }) -}}
                {{- form_errors(form) -}}
            </div>
{%- endblock form_row %}






